<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".writeReviewdata">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <LinearLayout
                android:id="@+id/Upbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="24dp">

                <ImageButton
                    android:id="@+id/backBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:src="@drawable/backbutton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="리뷰작성"
                    android:textColor="#8E8E8E"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:paddingStart="24dp"
                android:id="@+id/titleArea"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:id="@+id/placeImage"
                    app:cardCornerRadius="9dp"
                    android:background="#00000000">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/place"
                        android:id="@+id/placeimagearea"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_innergray"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="카페"
                            android:textColor="#1D192B"
                            android:id="@+id/reviewCatogory"
                            android:padding="4dp"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제목"
                        android:textSize="24dp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/reviewplacename"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDEE5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP3 키워드"
                android:textColor="@color/black"
                android:padding="16dp"
                android:textSize="20dp"
                android:layout_marginStart="8dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/key0t">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="음식/가격"
                            android:textSize="14dp"
                            android:textColor="#727996"
                            />
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key0t1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="음료가 맛있어요"
                               android:id="@+id/keyworddes0t1"
                                android:textSize="14dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key0t2">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="특별한 메뉴가 있어요"
                                android:id="@+id/keywordd0t2"
                                android:textSize="14dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key0t3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="디저트가 맛있어요"
                                android:id="@+id/keywordd0t3"
                                android:textSize="14dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key0t4">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가성비가 좋아요"
                                android:id="@+id/keywordd0t4"
                                android:textSize="14dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key0t5">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="종류가 다양해요"
                                android:id="@+id/keywordd0t5"
                                android:textSize="14dp"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/key1t">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="음식/가격"
                            android:textSize="14dp"
                            android:textColor="#727996"
                            />
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key1t1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="좌석이 편해요"
                                android:id="@+id/keyworddes1t1"
                                android:textSize="14dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key1t2">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="친절해요"
                                android:id="@+id/keywordd1t2"
                                android:textSize="14dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key1t3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="실내가 청결해요"
                                android:id="@+id/keywordd1t3"
                                android:textSize="14dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key1t4">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="오래 머무르기 좋아요"
                                android:id="@+id/keywordd1t4"
                                android:textSize="14dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:id="@+id/key1t5">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="선물하기 좋아요"
                                android:id="@+id/keywordd1t5"
                                android:textSize="14dp"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/key2t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분위기"
                            android:textColor="#727996"
                            android:textSize="14dp" />

                        <FrameLayout
                            android:id="@+id/key2t1"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/keyworddes2t1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="뷰가 좋아요"
                                android:textSize="14dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/key2t2"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/keywordd2t2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="인테리어가 멋져요"
                                android:textSize="14dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/key2t3"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/keywordd2t3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="아늑해요"
                                android:textSize="14dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/key2t4"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/keywordd2t4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="공간이 넓어요"
                                android:textSize="14dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/key2t5"
                            android:layout_width="wrap_content"
                            android:layout_height="37.45dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_innerwhiteradius"
                            android:elevation="4dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/keywordd2t5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="야외 공간이 멋져요"
                                android:textSize="14dp" />
                        </FrameLayout>
                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="나만의 이야기"
                android:textColor="@color/black"
                android:layout_marginStart="24dp"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하고 싶은 말을 자유롭게 적어주세요"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:id="@+id/inputlayer">
                <EditText
                    android:layout_width="333.84dp"
                    android:layout_height="111.28dp"
                    android:inputType="textMultiLine"
                    android:background="@drawable/bg_textinput"
                    android:ems="200"
                    android:hint="내용을 입력하세요"
                    android:textColor="#727996"
                    android:textSize="14dp"
                    android:maxLength="200"
                    android:gravity="top"
                    android:padding="12dp"
                    android:id="@+id/inputarea"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputchecker"
                    android:textSize="12dp"
                    android:textColor="#727996"
                    android:text="0/200"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="right" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_innergrayround"
                android:id="@+id/addpicture"
                android:clickable="true"
                android:layout_marginStart="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진추가"
                    android:textSize="16dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/black" />

            </FrameLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/newcardview"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/round_card"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/newcardview2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/round_card"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/newcardview3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/round_card"
                    android:scaleType="centerCrop"
                    android:padding="4dp"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_innergrayradius8"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="40dp"
                android:id="@+id/checknextbtn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저장"
                    android:id="@+id/bottombtntxt"
                    android:textColor="#727996"
                    android:textSize="16dp" />


            </LinearLayout>



        </LinearLayout>




    </ScrollView>


</layout>