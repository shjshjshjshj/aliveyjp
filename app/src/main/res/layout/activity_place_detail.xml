<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".placeDetail"
    android:background="#E3E3E3">

    <data>
        <variable
            name="model"
            type="com.tts.yeojeong.dataset.PlaceDetailData" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/scollControl">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:background="@color/white">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back"
                    android:src="@drawable/backbutton"
                    android:background="@color/white"
                    android:padding="4dp"
                    android:paddingEnd="12dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세보기"
                    android:layout_marginStart="24dp"
                    android:textSize="20dp"
                    android:id="@+id/title" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/black">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="202dp"
                    android:id="@+id/placeimage"
                    android:src="@drawable/place"
                    android:scaleType="centerCrop"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="12dp"
                android:paddingStart="24dp"
                android:paddingBottom="16dp"
                android:id="@+id/placenameArea"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장소명"
                    android:textColor="@color/black"
                    android:id="@+id/pname"
                    android:textSize="24dp"/>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:id="@+id/infoArea"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/buttonArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/callButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="28dp"
                                android:paddingEnd="28dp">

                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:src="@drawable/vectorcall" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginTop="8dp"
                                    android:text="전화"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bookButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="28dp"
                                android:paddingEnd="28dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:id="@+id/ic_book"
                                    android:src="@drawable/vectorbook" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="8dp"
                                    android:text="저장"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/writeButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="28dp"
                                android:paddingEnd="28dp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="7dp"
                                    android:background="@color/white"
                                    android:src="@drawable/write" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="리뷰작성"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/shareButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="28dp"
                                android:paddingEnd="28dp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:background="@color/white"
                                    android:src="@drawable/share" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="8dp"
                                    android:text="공유"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="#DCDEE5" />

                    </LinearLayout>





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/addInfo"
                    android:paddingStart="24dp"
                    android:paddingBottom="16dp"
                    android:clipToPadding="false"
                    android:layout_marginTop="40dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/categoryArea">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/categoryIcon"
                            android:src="@drawable/place_coffee"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8E8E8E"
                            android:text="카테고리"
                            android:id="@+id/categoryText"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:textSize="14dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:id="@+id/activeArea">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/activeIcon"
                            android:src="@drawable/place_clock"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8E8E8E"
                            android:text="영업시간"
                            android:id="@+id/activeText"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:textSize="14dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:id="@+id/telArea">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/telIcon"
                            android:src="@drawable/place_coffee"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8E8E8E"
                            android:text="전화번호"
                            android:id="@+id/telText"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/siteButton"
                        android:layout_width="332dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundoutline"
                        android:paddingStart="8dp"
                        android:elevation="2dp"
                        android:clipToPadding="false"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_marginTop="24dp">

                        <TextView
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:text="www.장소사이트.com"
                            android:textColor="#0D70FF"
                            android:layout_marginStart="16dp"
                            android:textSize="14dp"
                            android:id="@+id/siteURL"/>
                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_right"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mapArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="24dp"
