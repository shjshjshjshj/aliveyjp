                    android:layout_width="336dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/mapTitle">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="336dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mapBottomArea"
                    android:paddingTop="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_marker"
                        android:id="@+id/IcMarker"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/placeAdressButton">

                        <TextView
                            android:id="@+id/placeAdress"
                            android:layout_width="267dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:text="주소"
                            android:textColor="#8E8E8E"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/copyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:text="복사"
                            android:textColor="#0D70FF"
                            android:textSize="14dp" />


                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyWordArea"
                android:background="@color/white"
                android:paddingTop="16dp"
                android:paddingBottom="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:clipToPadding="false"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP3 키워드"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:id="@+id/keyWord1Area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/roundoutline"
                    android:elevation="2dp"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/keyWord1"
                        android:layout_width="312dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="KeyWordContent1"
                        android:background="@drawable/roundoutline"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/keyWord2Area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/roundoutline"
                    android:elevation="2dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/keyWord2"
                        android:layout_width="312dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="KeyWordContent2"
                        android:background="@drawable/roundoutline"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/keyWord3Area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/roundoutline"
                    android:elevation="2dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/keyWord3"
                        android:layout_width="312dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="KeyWordContent3"
                        android:background="@drawable/roundoutline"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:id="@+id/reviewArea"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/utility"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="리뷰"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/writeReview"
                        android:padding="8dp"
                        android:src="@drawable/write24dp"
                        android:layout_marginStart="278dp"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/review1AllArea"
                    android:visibility="gone"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:id="@+id/review1profile"
                                android:src="@drawable/place"
                                android:scaleType="centerCrop"
                                app:civ_border_overlay="false"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:paddingTop="4dp"
                                android:id="@+id/review1infoArea"
                                android:layout_marginEnd="24dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/profileName"
                                    android:text="닉네임"
                                    android:textSize="18dp"
                                    android:textColor="@color/black"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="right">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="n번째 리뷰"
                                        android:visibility="gone"
                                        android:textSize="12dp"
                                        android:textColor="#8E8E8E"
                                        android:id="@+id/vieworder1"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/reviewDate1"
                                        android:textSize="12dp"
                                        android:text="2023.04.02"
                                        android:textColor="#8E8E8E"
                                        android:gravity="right"
                                        />
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>
                    </FrameLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:id="@+id/review1Image"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:background="@color/black"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="24dp"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/review1multiArea"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="175dp"
                                android:id="@+id/review1img1"
                                android:scaleType="centerCrop"
                                android:background="@color/black"
                                android:layout_marginTop="16dp"/>
                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="175dp"
                                android:id="@+id/review1img2"
                                android:scaleType="centerCrop"
                                android:layout_marginStart="16dp"
                                android:background="@color/black"
                                android:layout_marginTop="16dp"/>
                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="175dp"
                                android:id="@+id/review1img3"
                                android:layout_marginStart="16dp"
                                android:scaleType="centerCrop"
                                android:background="@color/black"
                                android:layout_marginTop="16dp"/>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="332dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/reviewBottomArea"
                        android:gravity="right"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bottom_border"
                        android:paddingBottom="4dp"
                        >
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/heart"
                            android:id="@+id/reviewBookmarkButton"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="226"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="222dp"
                            android:id="@+id/riviewBookmarkCount"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/reportButton"
                            android:text="신고하기"
                            android:textSize="14dp"
                            android:gravity="right"
                            android:textColor="#8E8E8E"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/review2AllArea"
                    android:visibility="gone"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:id="@+id/review2profile"
                                android:src="@drawable/place"
                                android:scaleType="centerCrop"
                                app:civ_border_overlay="false"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:paddingTop="4dp"
                                android:id="@+id/review2infoArea"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/profileName2"
                                    android:text="닉네임"
                                    android:textSize="18dp"
                                    android:textColor="@color/black"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="right">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="n번째 리뷰"
                                        android:visibility="gone"
                                        android:textSize="12dp"
                                        android:textColor="#8E8E8E"
                                        android:id="@+id/vieworder2"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/reviewDate2"
                                        android:layout_marginEnd="24dp"
                                        android:textSize="12dp"
                                        android:text="2023.04.02"
                                        android:textColor="#8E8E8E"
                                        android:gravity="right"
                                        />
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>
                    </FrameLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginEnd="24dp"
                        android:id="@+id/review2Image"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/place"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:layout_marginBottom="24dp"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/review2multiArea"
